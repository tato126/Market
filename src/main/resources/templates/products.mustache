{{>layout/header}}

<h1>SpringBoot Web Service</h1>

<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/products/save" role="button" class="btn btn-primary">상품 등록</a>
        </div>
    </div>
</div>

<table class="table table-horizontal table-bordered">
    <thead class="thead-strong">
    <tr>
        <th>번호</th>
        <th>제목 (상품명)</th>
        <th>작성자 (판매자 이름)</th>
        <th>내용 (상품 설명)</th>
        <th>가격</th>
        <th>재고 수량</th>
        <th>상품 상태</th>
        <th>상품 카테고리</th>
    </tr>
    </thead>
    <tbody id="tbody">
    {{#products}}
        <tr>
            <td>{{productId}}</td>
            <td><a href="/products/update/{{productId}}">{{productName}}</a></td>
            <td>{{sellerName}}</td>
            <td>{{description}}</td>
            <td>{{price}}</td>
            <td>{{stockQuantity}}</td>
            <td>{{productState}}</td>
            <td>{{productCategory}}</td>
        </tr>
    {{/products}}
    </tbody>
</table>
{{>layout/footer}}