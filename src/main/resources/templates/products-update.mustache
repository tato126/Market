{{>layout/header}}

<h1>상품 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">상품 번호</label>
                <input type="text" class="form-control" id="id" value="{{products.productId}}" readonly>
            </div>
            <div class="form-group">
                <label for="productName">제목 (상품명)</label>
                <input type="text" class="form-control" id="productName" value="{{products.productName}}">
            </div>
            <div class="form-group">
                <label for="sellerName">작성자 (판매자 이름)</label>
                <input type="text" class="form-control" id="sellerName" value="{{products.sellerName}}" readonly>
            </div>
            <div class="form-group">
                <label for="description">내용 (상품 설명)</label>
                <textarea class="form-control" id="description">{{products.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="price">가격:</label>
                <input type="number" class="form-control" id="price" value="{{products.price}}" step="0.01" min="0"/>
            </div>
            <div class="form-group">
                <label for="stockQuantity">재고 수량:</label>
                <input type="number" class="form-control" id="stockQuantity" value="{{products.stockQuantity}}"
                       min="0"/>
            </div>
            <div class="form-group">
                <label for="productState">상품 상태:</label>
                <select class="form-control" id="productState" name="productState">
                    <option value="PREPARING">판매 준비중</option>
                    <option value="ON_SALE">판매중</option>
                    <option value="SOLD_OUT">품절</option>
                    <option value="DISCONTINUED">판매 중지</option>
                </select>
                <input type="hidden" id="currentProductState" value="{{products.productState}}">
            </div>
            <div class="form-group">
                <label for="productCategory">상품 카테고리:</label>
                <select class="form-control" id="productCategory" name="productCategory">
                    <option value="TOP">상의</option>
                    <option value="BOTTOM">하의</option>
                    <option value="SHOES">신발</option>
                </select>
                <input type="hidden" id="currentProductCategory" value="{{products.productCategory}}">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}